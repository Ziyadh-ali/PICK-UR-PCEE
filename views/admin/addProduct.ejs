    <script>
        function viewImage1(event) {
            document.getElementById("imgView1").src = URL.createObjectURL(event.target.files[0]);
        }
        function viewImage2(event) {
            document.getElementById("imgView2").src = URL.createObjectURL(event.target.files[0]);
        }
        function viewImage3(event) {
            document.getElementById("imgView3").src = URL.createObjectURL(event.target.files[0]);
        }
        function viewImage4(event) {
            document.getElementById("imgView4").src = URL.createObjectURL(event.target.files[0]);
        }

        let croppers = {}; // store separate cropper instances

        function viewImage(event, index) {
            const input = event.target;
            const reader = new FileReader();

            reader.onload = function () {
                const dataURL = reader.result;

                // Use cropper container image (not the preview image)
                const cropperImg = document.querySelector("#cropperImg" + index);
                cropperImg.src = dataURL;

                // Show cropper container
                const cropperContainer = cropperImg.parentNode;
                cropperContainer.style.display = "block";

                // Destroy old cropper if exists
                if (croppers[index]) {
                    croppers[index].destroy();
                }

                // Init new cropper
                croppers[index] = new Cropper(cropperImg, {
                    aspectRatio: 1,
                    viewMode: 1,
                    autoCropArea: 1,
                    zoomable: true
                });

                // Save button
                const saveButton = document.querySelector("#saveButton" + index);
                saveButton.onclick = function () {
                    const croppedCanvas = croppers[index].getCroppedCanvas();

                    // Set cropped image as preview
                    const preview = document.querySelector("#imgView" + index);
                    preview.src = croppedCanvas.toDataURL("image/png");

                    // Replace file input with cropped file
                    croppedCanvas.toBlob((blob) => {
                        const file = new File([blob], `cropped-${Date.now()}-${index}.png`, { type: "image/png" });
                        const dataTransfer = new DataTransfer();
                        dataTransfer.items.add(file);
                        input.files = dataTransfer.files;
                    });

                    // Hide crop box + destroy cropper
                    cropperContainer.style.display = "none";
                    croppers[index].destroy();
                };
            };

            reader.readAsDataURL(input.files[0]);
        }


        const selectedImages = [];
        document.getElementById("input1").addEventListener("change", handleFileSelect);

        function handleFileSelect(event) {
            const addedImagesContainer = document.getElementById("addedImagesConatiner");
            addedImagesContainer.innerHTML = "";
            const files = event.target.files;
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                selectedImages.push(files);
                const thumbnail = document.createElement("div");
                thumbnail.classList.add('thumbnail');

                const img = document.createElement('img');
                img.src = URL.createObjectURL(file);
                img.alt = "thumbnail";
                img.style.width = "50px";
                img.style.height = "auto";
                const removeIcon = document.createElement("span");
                removeIcon.classList.add("remove-icon");
                removeIcon.innerHTML = "&times;";
                removeIcon.addEventListener("click", function () {
                    const index = selectedImages.indexOf(file);
                    if (index !== -1) {
                        selectedImages.splice(index, 1);
                    }
                    thumbnail.remove();
                });

                thumbnail.appendChild(img);
                thumbnail.appendChild(removeIcon);
                addedImagesContainer.appendChild(thumbnail);
            }
        }

        function validateForm() {
            let isValid = true;

            function showErrorMessage(elementId, message) {
                document.querySelector(`#${elementId} + .error`).innerText = message;
                isValid = false;
            }

            document.querySelectorAll(".error").forEach((el) => (el.innerText = ""));

            const productName = document.getElementById("productName").value.trim();
            if (productName === "") {
                showErrorMessage("productName", "Product title is required.");
            }

            const description = document.getElementById("descrptionid").value.trim();
            if (description === "") {
                showErrorMessage("descrptionid", "Description is required.");
            }

            const specification = document.getElementById("specificationid").value.trim();
            if (specification === "") {
                showErrorMessage("specificationid", "Specification is required.");
            }

            const stock = document.getElementById("stock").value.trim();
            if (stock === "" || isNaN(stock) || parseInt(stock) < 0) {
                showErrorMessage("stock", "Please enter a valid stock quantity.");
            }

            const price = document.getElementById("price").value.trim();
            if (price === "" || isNaN(price) || parseFloat(price) <= 0) {
                showErrorMessage("price", "Please enter a valid price.");
            }

            const category = document.querySelector("select[name='category']").value;
            if (category === "") {
                document.querySelector("select[name='category'] + .error").innerText = "Please select a category.";
                isValid = false;
            }

            const MAX_SIZE = 1 * 1024 * 1024;
            const images = ["input1", "input2", "input3", "input4"];

            images.forEach((inputId, index) => {
                const imageInput = document.getElementById(inputId);
                if (imageInput.files.length === 0) {
                    showErrorMessage(inputId, `Please select an image for input ${index + 1}.`);
                } else {
                    const file = imageInput.files[0];
                    if (file.size > MAX_SIZE) {
                        showErrorMessage(inputId, `Image ${index + 1} must be under 1 MB.`);
                    }
                }
            });

            return isValid;
        }


        // Attach validation to form submit
        document.getElementById('form').addEventListener('submit', function (event) {
            if (!validateForm()) {
                event.preventDefault();
                console.log("Form validation failed! Submission prevented.");
            }
        });

    </script>
