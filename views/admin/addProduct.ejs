    <style>
        /* General card spacing */
        .card-body {
            padding: 20px;
        }

        /* Input and textarea styling */
        .form-control,
        .form-select,
        textarea {
            border-radius: 6px;
            padding: 10px 12px;
            font-size: 14px;
            border: 1px solid #d1d5db;
            transition: all 0.2s ease-in-out;
            width: 100%;
        }

        .form-control:focus,
        .form-select:focus,
        textarea:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.2);
        }

        /* Label styling */
        .form-label {
            font-weight: 600;
            margin-bottom: 6px;
            display: inline-block;
            color: #374151;
        }

        /* Error message styling */
        .error {
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }

        /* Section headings */
        h6 {
            font-size: 15px;
            font-weight: 700;
            color: #111827;
            margin-bottom: 15px;
        }

        /* Image preview */
        #imgView1,
        #imgView2,
        #imgView3,
        #imgView4 {
            max-width: 150px;
            max-height: 150px;
            border-radius: 8px;
            border: 1px solid #e5e7eb;
            margin-bottom: 10px;
            object-fit: cover;
            display: block;
        }

        /* File input */
        input[type="file"] {
            padding: 6px;
            font-size: 13px;
        }

        /* Save button inside cropper */
        .btn-sm.btn-primary {
            margin-left: 10px;
            border-radius: 6px;
            padding: 6px 12px;
        }

        /* Submit button */
        button[type="submit"] {
            padding: 8px 20px;
            font-size: 14px;
            font-weight: 600;
            border-radius: 6px;
            background: #6366f1;
            border: none;
            transition: all 0.2s;
        }

        button[type="submit"]:hover {
            background: #4f46e5;
        }

        /* Space between rows */
        .row {
            margin-bottom: 20px;
        }
    </style>


