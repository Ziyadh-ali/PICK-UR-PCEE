        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <!-- <p>Lorem ipsum dolor sit amet.</p> -->
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                            <select class="form-select">
                                <option selected>All Category</option>
                                <% Categories.forEach(category =>{%>
                                    <option value="<%= category._id %>"> <%= category.name %> </option>
                                    <%}) %>
                            </select>
                        </div>
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>All Brands</option>
                                <% Brands.forEach(brand =>{%>
                                    <option value="<%= brand._id %>"> <%= brand.name %> </option>
                                    <%}) %>
                            </select>
                        </div>
                        <div class="col-md-2 col-6">
                            <select class="form-select">
                                <option selected>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <% Products.forEach(product => { %>
                    <article class="itemlist">
                      <div class="row align-items-center">
                        <!-- Product Image and Name -->
                        <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                          <a class="itemside" href="#">
                            <div class="left">
                              <img src="/uploads/re-image/<%= product.image[0]%>" alt="Product Image" class="img-sm img-thumbnail" >
                            </div>
                            <div class="info">
                              <h6 class="mb-0"><%= product.name %></h6>
                            </div>
                          </a>
                        </div>
                  
                        <!-- Product Price (Original or Discounted) -->
                        <div class="col-lg-2 col-sm-2 col-4 col-price text-center">
                          <span>$<%= product.price %></span>
                        </div>
                        
                        <div class="col-lg-2 col-sm-2 col-4 col-date text-center">
                            <%if(product.offerId){%>
                                <span>$<%= product.offerPrice %></span>
                                <%}else{%>
                                    <span>No Offer</span>
                                    <%}%>
                            
                          </div>

                        <div class="col-lg-2 col-sm-2 col-4 col-status text-center">
                          <% if (product.isActive) { %>
                            <span class="badge rounded-pill alert-success">Active</span>
                          <% } else { %>
                            <span class="badge rounded-pill alert-danger">Inactive</span>
                          <% } %>
                        </div>
                  
                        <!-- Product Date Added or Updated -->
                       
                  
                        <!-- Action Buttons -->
                        <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                          <a href="/admin/products/edit?id=<%= product._id %>" class="btn btn-sm font-sm rounded btn-brand">
                            <i class="material-icons md-edit"></i> Edit
                          </a>
                          <% if (product.isActive) { %>
                            <a href="/admin/products/unlist/<%= product._id %>" class="btn btn-sm font-sm btn-danger rounded">
                               Unlist
                              </a>
                        <% } else { %>
                            <a href="/admin/products/list/<%= product._id %>" class="btn btn-sm font-sm btn-success rounded">
                                List
                              </a>
                        <% } %>
                          
                        </div>
                      </div> <!-- row .// -->
                    </article> <!-- itemlist .// -->
                    <% }) %>
                  </div>
                  <!-- card-body end// -->
            </div> <!-- card end// -->
