        let salesChart
       function fetchSalesData(filter) {
    return new Promise((resolve, reject) => {
        $.ajax({
            url: `/admin/sales-data?filter=${filter}`,
            method: 'GET',
            dataType: 'json',
            success: function(response) {
                resolve(response);
            },
            error: function(xhr, status, error) {
                console.error("Error fetching sales data:", error);
                reject(error);
            }
        });
    });
}

async function updateChart() {
    const filterElement = document.getElementById('timeFilter');
    const chartElement = document.getElementById('salesChart');
    
    if (!filterElement || !chartElement) {
        console.error("Required elements are not found in the DOM.");
        return;
    }

    const filter = filterElement.value;
    const salesData = await fetchSalesData(filter);

    const labels = salesData.map(item => item.label);
    const dataPoints = salesData.map(item => item.total);

    if (salesChart) {
        salesChart.destroy();
    }

    const ctx = chartElement.getContext('2d');
    salesChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Sales',
                data: dataPoints,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
}

