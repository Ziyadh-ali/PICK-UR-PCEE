          </div>
          <div>
            <input
              type="text"
              placeholder="Search Categories"
              class="form-control bg-white"
            />
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-3">
                <% if (right_message) { %>
                <div class="text-success text-center" style="color: green">
                  <%= right_message %>
                </div>
                <% } %> <% if (err_message) { %>
                <div class="text-danger text-center" style="color: red">
                  <%= err_message %>
                </div>
                <% } %>
                <form action="/admin/brands/edit/<%= Brands._id %>" method="post" id="form">
                  <div class="mb-4 input-group">
                    <label for="product_name" class="form-label">Name</label>
                    <input
                      type="text"
                      placeholder="Type here"
                      class="form-control"
                      name="name"
                      id="product_name"
                      value="<%= Brands.name %>"
                    />
                    <div
                      class="error"
                      style="position: absolute; top: 40px; left: 35px"
                    ></div>
                  </div>
                  <div class="mb-4 input-group">
                    <label class="form-label">Description</label>
                    <textarea
                      placeholder="Type here"
                      name="description"
                      class="form-control"
                      id="product_description"
                    ><%= Brands.description %></textarea>
                    <div
                      class="error"
                      style="position: absolute; top: 100px; left: 66px"
                    ></div>
                  </div>
                  <div class="d-grid">
                    <button class="btn btn-primary">Edit category</button>
                  </div>
