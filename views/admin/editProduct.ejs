    <!-- Main Script -->
    <script src="/assets/js/main.js" type="text/javascript"></script>
    <script>
        // Global variables
        let croppers = {}; // store separate cropper instances
        let existingImageCount = Number('<%= product.image.length %>');
        let newImageCount = 0;
        const MAX_IMAGES = 4;
        const MIN_IMAGES = 2;
        
        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            updateImageInputs();
            updateImageStatus();
        });
        
        function updateImageStatus() {
            const totalImages = existingImageCount + newImageCount;
            document.getElementById('currentImageCount').textContent = totalImages;
            
            if (totalImages < MIN_IMAGES) {
                document.getElementById('imageStatus').innerHTML += 
                    `<div class="error">Warning: You need at least ${MIN_IMAGES} images for a product.</div>`;
            }
        }
        
        function updateImageInputs() {
            const totalImages = existingImageCount + newImageCount;
            const availableSlots = MAX_IMAGES - totalImages;
            
            // Enable or disable image inputs based on available slots
            for (let i = 1; i <= 4; i++) {
                const container = document.getElementById(`imageInputContainer${i}`);
                const input = document.getElementById(`input${i}`);
                const errorElement = document.getElementById(`imageError${i}`);
                
                if (i > availableSlots) {
                    container.classList.add('disabled');
                    errorElement.textContent = 'Maximum of 4 images reached';
                } else {
                    container.classList.remove('disabled');
                    errorElement.textContent = '';
                }
            }
        }
        
        function viewImage(event, index) {
            const input = event.target;
            const totalImages = existingImageCount + newImageCount;
            
            // Check if we can add more images
            if (totalImages >= MAX_IMAGES) {
                Toastify({
                    text: "Maximum of 4 images reached. Delete some existing images first.",
                    duration: 3000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#dc2626",
                }).showToast();
                input.value = '';
                return;
            }
            
            const reader = new FileReader();

            reader.onload = function () {
                const dataURL = reader.result;

                // Use cropper container image
                const cropperImg = document.getElementById("cropperImg" + index);
                cropperImg.src = dataURL;

                // Show cropper container
                const cropperContainer = document.getElementById("cropperContainer" + index);
                cropperContainer.style.display = "block";

                // Destroy old cropper if exists
                if (croppers[index]) {
                    croppers[index].destroy();
                }

                // Init new cropper
                croppers[index] = new Cropper(cropperImg, {
                    aspectRatio: 1,
                    viewMode: 1,
                    autoCropArea: 1,
                    zoomable: true
                });

                // Save button
                const saveButton = document.getElementById("saveButton" + index);
                saveButton.onclick = function () {
                    const croppedCanvas = croppers[index].getCroppedCanvas();

                    // Set cropped image as preview
                    const preview = document.getElementById("imgView" + index);
                    preview.src = croppedCanvas.toDataURL("image/png");

                    // Replace file input with cropped file
                    croppedCanvas.toBlob((blob) => {
                        const file = new File([blob], `cropped-${Date.now()}-${index}.png`, { type: "image/png" });
                        const dataTransfer = new DataTransfer();
                        dataTransfer.items.add(file);
                        input.files = dataTransfer.files;
                        
                        // Count this as a new image
                        newImageCount++;
                        updateImageInputs();
                        updateImageStatus();
                    });

                    // Hide crop box + destroy cropper
                    cropperContainer.style.display = "none";
                    croppers[index].destroy();
                };
            };

            reader.readAsDataURL(input.files[0]);
        }

        function deleteSingleImage(imageId, productId) {
            if (existingImageCount <= MIN_IMAGES) {
                Toastify({
                    text: `You need at least ${MIN_IMAGES} images. Upload new images before deleting this one.`,
                    duration: 3000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#dc2626",
                }).showToast();
                return;
            }
            
            if (confirm("Are you sure you want to delete this image?")) {
                $.ajax({
                    url: "/admin/products/deleteImage",
                    method: "post",
                    data: { imageNameToServer: imageId, productIdToServer: productId },
                    success: ((response) => {
                        if (response.status === true) {
                            existingImageCount--;
                            updateImageInputs();
                            updateImageStatus();
                            window.location.reload();
                        } else {
                            alert("Error deleting image");
                        }
                    }),
                    error: function() {
                        alert("Error deleting image");
                    }
                });
            }
        }

        function validateForm() {
            let isValid = true;
            const totalImages = existingImageCount + newImageCount;

            function showErrorMessage(elementId, message) {
                document.querySelector(`#${elementId} + .error`).innerText = message;
                isValid = false;
            }

            document.querySelectorAll(".error").forEach((el) => (el.innerText = ""));

            const productName = document.getElementById("productName").value.trim();
            if (productName === "") {
                showErrorMessage("productName", "Product title is required.");
            }

            const description = document.getElementById("descrptionid").value.trim();
            if (description === "") {
                showErrorMessage("descrptionid", "Description is required.");
            }

            const specification = document.getElementById("specificationid").value.trim();
            if (specification === "") {
                showErrorMessage("specificationid", "Specification is required.");
            }

            const stock = document.getElementById("stock").value.trim();
            if (stock === "" || isNaN(stock) || parseInt(stock) < 0) {
                showErrorMessage("stock", "Please enter a valid stock quantity.");
            }

            const price = document.getElementById("price").value.trim();
            if (price === "" || isNaN(price) || parseFloat(price) <= 0) {
                showErrorMessage("price", "Please enter a valid price.");
            }

            const category = document.querySelector("select[name='category']").value;
            if (category === "") {
                document.querySelector("select[name='category'] + .error").innerText = "Please select a category.";
                isValid = false;
            }
            
            // Image validation
            if (totalImages < MIN_IMAGES) {
                Toastify({
                    text: `Please add at least ${MIN_IMAGES} images. You currently have ${totalImages}.`,
                    duration: 3000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#dc2626",
                }).showToast();
                isValid = false;
            }
            
            if (totalImages > MAX_IMAGES) {
                Toastify({
                    text: `Maximum of ${MAX_IMAGES} images exceeded. Please remove some images.`,
                    duration: 3000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "#dc2626",
                }).showToast();
                isValid = false;
            }

            return isValid;
        }

        function validateAndSubmit() {
            if (validateForm()) {
                document.getElementById("form").submit();
            }
        }
    </script>
