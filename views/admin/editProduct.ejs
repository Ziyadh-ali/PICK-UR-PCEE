                                        <%= right_message %>
                                    </div>
                                    <% } %>
                                        <% if (err_message) { %>
                                            <div class="alert alert-danger text-center">
                                                <%= err_message %>
                                            </div>
                                            <% } %>
                                                <div class="row">
                                                    <!-- Left column -->
