                                                                placeholder="Type here"><%= product.description %></textarea>
                                                            <span class="error text-danger"></span>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Specification</label>
                                                            <textarea id="specificationid" name="productSpecification"
                                                                class="form-control" rows="4"
                                                                placeholder="Type here"><%= product.specification %></textarea>
                                                            <span class="error text-danger"></span>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Brand name</label>
                                                            <select class="form-select" name="brand" required>
                                                                <% Brands.forEach(brand=> { %>
                                                                    <option value="<%= brand._id %>" <%=(product.brands
                                                                        && product.brands.equals(brand._id))
                                                                        ? 'selected' : '' %>>
                                                                        <%= brand.name %>
                                                                    </option>
                                                                    <% }) %>
                                                            </select>
                                                            <span class="error text-danger"></span>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="form-label">Stock</label>
                                                            <input id="stock" value="<%= product.stock %>" name="stock"
                                                                type="number" class="form-control"
                                                                placeholder="Enter stock">
                                                            <span class="error text-danger"></span>
                                                        </div>

                                                        <h6 class="mb-3 mt-4">2. Pricing</h6>
                                                        <div class="mb-3">
                                                            <label class="form-label">PUP Price</label>
                                                            <input id="price" value="<%= product.price %>" name="price"
                                                                type="number" class="form-control" placeholder="$00.0">
                                                            <span class="error text-danger"></span>
                                                        </div>

                                                        <h6 class="mb-3 mt-4">3. Category</h6>
                                                        <div class="mb-3">
                                                            <select class="form-select" name="category">
                                                                <% Categories.forEach(category=>{ %>
                                                                    <option value="<%= category._id %>" <%=(product.category
                                                                        && product.category.equals(category._id))
                                                                        ? 'selected' : '' %>>
                                                                        <%= category.name %>
                                                                    </option>
                                                                    <%}) %>
                                                            </select>
                                                            <span class="error text-danger"></span>
                                                        </div>
                                                    </div>

                                                    <!-- Right column (Media) -->
