                      <th colspan="2" class="text-center">Product</th>
                      <th class="text-center">Price</th>
                      <th class="text-right">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% wishlist.products.forEach(product => { %>
                      <tr class="wishlist__row border-bottom line1 wishlist-flex border-top">
                        <td class="wishlist__image-wrapper wishlist-flex-item">
                          <a href="#">
                            <img style="width: 100px"
                              src="/uploads/re-image/<%= product.productId.image[0] %>"
                              alt="<%= product.productId.name %>" />
                          </a>
                        </td>
                        <td class="wishlist__meta small--text-left wishlist-flex-item">
                          <div class="list-view-item__title">
                            <a href="#">
                              <p style="font-size: 14px"><%= product.productId.name %></p>
                            </a>
                          </div>
                          <div class="wishlist__meta-text">
                            Category: <%= product.productId.category.name %>
                          </div>
                        </td>
                        <td class="wishlist__price-wrapper wishlist-flex-item">
                          <p class="money">â‚¹<%= product.productId.name %></p>
                        </td>
                        <td class="text-center small--hide">
                          <a type="button" data-product-id="<%= product.productId._id %>"
                            class="add-to-cart-btn btn btn-primary" title="Move to Cart">
                            <i class="icon icon-cart"></i> Add to Cart 
                          </a>
                          <a onclick="removeWishlist('<%= product.productId._id %>')" type="button"
                            class="wishlistRemove btn btn-secondary" title="Remove Item">
                            <i class="icon icon anm anm-times-l"></i>
                          </a>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
                <hr />
              </form>
            </div>
            <div class="col-12 col-sm-12 col-md-4 col-lg-4 wishlist__footer">
              <div class="solid-border">
                <div class="wishlist__subtotal">
                  <p><strong>Items in Wishlist:</strong> <%= wishlist.products.length %></p>
                </div>
                <a href="/">
