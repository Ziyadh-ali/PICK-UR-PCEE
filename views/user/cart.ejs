    <div class="container">
      <div  id="cartTable" class="row">
        <% if(cart && cart.products.length >0){%>
        <div class="col-12 col-sm-12 col-md-8 col-lg-8 main-col">
          <form action="#" method="post" class="cart style2">
            <table>
              <thead class="cart__row cart__header">
                <tr>
                  <th colspan="2" class="text-center">Product</th>
                  <th class="text-center">Price</th>
                  <th class="text-center">Quantity</th>
                  <th class="text-right">Total</th>
                  <th class="action">&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <% cart.products.forEach(product =>{%>
                <tr class="cart__row border-bottom line1 cart-flex border-top">
                  <td class="cart__image-wrapper cart-flex-item">
                    <a href="#"
                      ><img
                        style="width: 100px"
                        src="/uploads/re-image/<%= product.productId.image[0] %>"
                        alt="Elastic Waist Dress - Navy / Small"
                    /></a>
                  </td>
                  <td class="cart__meta small--text-left cart-flex-item">
                    <div class="list-view-item__title">
                      <a href="#"
                        ><p style="font-size: 14px">
                          <%= product.productId.name %>
                        </p></a
                      >
                    </div>

                    <div class="cart__meta-text">
                      Category: <%= product.productId.category.name %>
                    </div>
                  </td>
                  <td class="cart__price-wrapper cart-flex-item">
                    <p class="money">₹<%= product.offerPrice %></p>
                  </td>
                  <td class="cart__update-wrapper cart-flex-item text-right">
                    <div class="cart__qty text-center">
                      <div class="qtyField">
                        <a
                          onclick="updateQuantity('<%= product.productId._id %>',0)"
                          class="qtyBtn minus"
                          ><i class="icon icon-minus"></i
                        ></a>
                        <input
                          class="cart__qty-input qty"
                          type="text"
                          name="updates[]"
                          id="qty"
                          value="<%= product.quantity %>"
                          pattern="[0-9]*"
                        />
                        <a
                          onclick="updateQuantity('<%= product.productId._id %>',1)"
                          class="qtyBtn plus"
                          ><i class="icon icon-plus"></i
                        ></a>
                      </div>
                    </div>
                  </td>
                  <td class="text-right small--hide cart-price">
                    <div>
                      <span class="money"
                        >₹<%=product.quantity*product.offerPrice%></span
                      >
                    </div>
                  </td>
                  <td class="text-center small--hide">
                    <a
                      onclick="removeCart('<%= product.productId._id %>')"
                      type="button"
                      class="cartRemove btn btn-secondary"
                      title="Remove tem"
                      ><i class="icon icon anm anm-times-l"></i
                    ></a>
                  </td>
                </tr>
                <%}) %>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="3" class="text-left">
                    <a href="/" class="btn--link cart-continue"
                      ><i class="icon icon-arrow-circle-left"></i> Continue
                      shopping</a
                    >
                  </td>
                  <td colspan="3" class="text-right">
                    <button
                      type="submit"
                      name="update"
                      class="btn--link cart-update"
                    >
                      <i class="fa fa-refresh"></i> Update
                    </button>
                  </td>
                </tr>
              </tfoot>
            </table>
            <hr />
          </form>
        </div>
        <div class="col-12 col-sm-12 col-md-4 col-lg-4 cart__footer">
          <div class="solid-border">
            <div class="row">
              <span class="col-12 col-sm-6 cart__subtotal-title"
